%article.news-post
  %header.news-header
    %h2.news-title
      %a{:href=>page.post.url}= page.post.title
    .news-byline
      .news-date= page.post.date.strftime('<abbr>%b</abbr> %d') if !page.post.date.nil?
  .news-body
    ~ page.post.content
  .news-footer
    %a{:href=>page.post.url} Go to News Article
